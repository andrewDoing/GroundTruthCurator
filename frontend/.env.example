# Frontend environment variables
# Base URL of the backend API
VITE_API_BASE_URL=http://localhost:8000

# Application Branding
# Title displayed in the header (default: Ground Truth Curator)
VITE_APP_TITLE=Ground Truth Curator

# OpenAPI URL for types generation (used by npm run api:types)
VITE_OPENAPI_URL=${VITE_API_BASE_URL}/openapi.json

# Optional: developer user id to simulate auth in dev (sent as X-User-Id)
VITE_DEV_USER_ID=

# Validation toggles (fallback only - backend config takes precedence)
# Require all references to be opened/visited before approval (default: true)
VITE_REQUIRE_REFERENCE_VISIT=true
# Require key paragraphs for relevant references (default: false)
VITE_REQUIRE_KEY_PARAGRAPH=false
# Number of items to request from self-serve assignments (default: 10)
VITE_SELF_SERVE_LIMIT=10
